<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="150dp"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="8sp"
    android:layout_marginTop="5sp"
    android:background="@drawable/shep_p"

    >

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="25sp"
        android:paddingTop="20sp"
        android:background="@drawable/shep_"
        >

            <TextView
                android:id="@+id/nomClient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hello"
                android:textColor="#00289e"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hello"
                android:textColor="#00289e"
                android:textSize="13sp"
                android:textStyle="bold"/>
            <TextView
            android:id="@+id/nomProduit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello"
            android:textColor="#9e0000"
            android:textSize="14sp"
                android:textStyle="bold" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <TextView
            android:id="@+id/quantitie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello"
                android:textColor="#188618"
                android:textStyle="italic"
            android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/uni"
                android:text="unite"
                android:textColor="@color/design_default_color_primary_dark"
                android:textStyle="italic"
                android:textSize="15sp"
                android:layout_marginLeft="3sp"
                />

        </LinearLayout>
    </LinearLayout>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageClient"
        android:layout_width="48sp"
        android:layout_height="48sp"
        android:layout_marginTop="3sp"
        android:src="@drawable/bg"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        app:riv_corner_radius="35dp"
        app:riv_border_width="2dp"
        app:riv_border_color="@android:color/holo_red_light"
        />



</RelativeLayout>