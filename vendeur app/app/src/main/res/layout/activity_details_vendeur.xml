<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailleVendeur.detailsVendeur">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/bg_welcome"
    android:scaleType="fitXY"
    />
<Button
    android:layout_width="30sp"
    android:layout_height="35sp"
    android:background="@drawable/icone_back"
    android:onClick="espaceven"
    />
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/details_shape"
        android:orientation="vertical"
        android:layout_marginTop="65sp"
        android:paddingBottom="10sp"
        android:layout_marginHorizontal="20sp"
        android:layout_marginBottom="40sp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="25sp"
            android:paddingBottom="30sp"
            android:layout_marginHorizontal="2sp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"/>
        <Spinner
            android:id="@+id/categorer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:layout_marginHorizontal="40sp"
            android:layout_marginBottom="20sp"
            android:paddingBottom="25sp"
            android:textAlignment="center"
            android:background="@drawable/shep_"
            android:gravity="center_horizontal" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/listview"
                android:paddingHorizontal="10sp"
                android:paddingTop="7sp"
                android:dividerHeight="8sp"
                android:paddingBottom="16sp"
                />

        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dec"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/background_dark"
        android:layout_marginTop="20sp"
        android:paddingTop="20sp"
        android:textAlignment="center"
        android:id="@+id/deconecter"
        android:textSize="15sp"
        android:gravity="center_horizontal" />

    </RelativeLayout>

</RelativeLayout>