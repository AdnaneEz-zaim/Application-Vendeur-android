<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10sp"
    android:layout_marginTop="10sp"
    android:padding="5dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        >
        <ImageView
            android:id="@+id/imageProd"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:padding="2sp"
            android:src="@drawable/carrot"
            android:scaleType="fitXY"
            android:background="@android:color/holo_green_dark"
            />
        <LinearLayout
            android:layout_marginLeft="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nomProd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="hello"
                android:textColor="@android:color/black"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/Fixed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="quantité demandé: "
                    android:textSize="10sp"/>
                <TextView
                    android:id="@+id/quantProd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hello"
                    android:textSize="10sp"/>
            </LinearLayout>
                <TextView
                    android:id="@+id/voirClient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Voir la position"
                    android:textColor="@android:color/holo_red_light"/>
                    android:textColor="@android:"/>
            </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        >
        <Button
            android:id="@+id/confirme"
            android:background="@drawable/photo_"
            android:layout_width="30sp"
            android:layout_height="30sp" />
        <Button
            android:layout_marginTop="5sp"
            android:id="@+id/decline"
            android:background="@drawable/photo_"
            android:layout_width="30sp"
            android:layout_height="30sp"/>
    </LinearLayout>

</RelativeLayout>